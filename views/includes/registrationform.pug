h3= t('registration')
form(id="signup", method='post', action='/users/registration')
	dl
		dt= t('firstname')
		dd
			input(type='text', name='firstname', placeholder=t('insert firstname'))
		dt= t('secondname')
		dd
			input(type='text', name='secondname', placeholder=t('insert secondname'))
		dt= t('threename')
		dd
			input(type='text', name='threename', placeholder=t('insert threename'))
		dt= t('borndate')
		dd
			input(type='date', name='born', placeholder=t('insert born'))
		dt= t('sex')
		dd
			select(name='sex')
				option(value='man')= t('man')
				option(value='woman')= t('woman')
		dt= t('username')		
		dd
			input(type='text', name='name', placeholder=t('insert username'))
		dt= t('password')
		dd
			input(type='password', name='password', placeholder=t('insert password'))
		dt= t('e-mail')
		dd
			input(type='text', name='email', placeholder=t('insert e-mail'))
		dd
			input(type='submit')